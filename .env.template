# Vector RAG Database - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =================================
# REQUIRED: OpenAI Configuration
# =================================
OPENAI_API_KEY=your_openai_api_key_here

# =================================
# REQUIRED: Security Configuration  
# =================================
# Generate secure secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=your_flask_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_SECRET=your_encryption_secret_here
# Generate salt with: python -c "import os, base64; print(base64.b64encode(os.urandom(16)).decode())"
ENCRYPTION_SALT=your_base64_encoded_salt_here

# =================================
# Application Configuration
# =================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5001

# =================================
# Database Configuration
# =================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
DEFAULT_COLLECTION_NAME=vector_rag_collection

# =================================
# Security & CORS Configuration
# =================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# =================================
# JWT Configuration
# =================================
JWT_EXPIRATION_HOURS=24

# =================================
# Optional: Redis Configuration
# =================================
REDIS_URL=redis://localhost:6379/0

# =================================
# Optional: Logging Configuration
# =================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# =================================
# Optional: Rate Limiting
# =================================
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# =================================
# Optional: Production Configuration
# =================================
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
# GUNICORN_BIND=0.0.0.0:8000
